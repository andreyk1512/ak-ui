{
  "name": "ak-ui",
  "version": "0.0.1",
  "type": "module",
  "description": "React UI kit library",
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "ui-kit",
    "component",
    "components",
    "design",
    "frontend",
    "react",
    "ui",
    "react-component"
  ],
  "author": "Andrii Krupa",
  "license": "MIT",
  "homepage": "https://github.com/andreyk1512/ak-ui#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andreyk1512/ak-ui.git"
  },
  "bugs": {
    "url": "https://github.com/andreyk1512/ak-ui/issues"
  },
  "scripts": {
    "build": "tsc && vite build",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "lint": "eslint ./src",
    "test": "jest",
    "prepare": "pnpm build && (is-ci || husky)",
    "pre-commit": "pnpm run lint",
    "pre-push": "pnpm run build && pnpm run test",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@jest/globals": "^29.7.0",
    "@storybook/addon-essentials": "^8.2.9",
    "@storybook/addon-interactions": "^8.2.9",
    "@storybook/addon-links": "^8.2.9",
    "@storybook/addon-onboarding": "^8.2.9",
    "@storybook/blocks": "^8.2.9",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/react": "^8.2.9",
    "@storybook/react-vite": "^8.2.9",
    "@storybook/testing-library": "^0.2.2",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.3.3",
    "css-loader": "^7.1.2",
    "eslint": "^9.9.0",
    "eslint-plugin-react": "^7.35.0",
    "globals": "^15.9.0",
    "husky": "^9.1.4",
    "is-ci": "^3.0.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.3.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sass-loader": "^16.0.0",
    "storybook": "^8.2.9",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.2.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.1.0",
    "vite": "^5.4.1",
    "vite-plugin-dts": "^4.0.3",
    "vite-plugin-svgr": "^4.2.0"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  },
  "dependencies": {
    "@emotion/react": "^11.13.0"
  }
}
