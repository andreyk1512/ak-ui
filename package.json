{
  "name": "ak-ui",
  "version": "0.0.1",
  "type": "module",
  "description": "React UI kit library",
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "ui-kit",
    "component",
    "components",
    "design",
    "frontend",
    "react",
    "ui",
    "react-component"
  ],
  "author": "Andrii Krupa",
  "license": "MIT",
  "homepage": "https://github.com/andreyk1512/ak-ui#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andreyk1512/ak-ui.git"
  },
  "bugs": {
    "url": "https://github.com/andreyk1512/ak-ui/issues"
  },
  "scripts": {
    "build": "tsc && vite build",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "lint": "tslint -p tsconfig.json",
    "test": "jest",
    "prepare": "pnpm build && (is-ci || husky install)",
    "pre-commit": "pnpm run lint",
    "pre-push": "pnpm run build && pnpm run test",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@storybook/addon-essentials": "^7.5.3",
    "@storybook/addon-interactions": "^7.5.3",
    "@storybook/addon-links": "^7.5.3",
    "@storybook/addon-onboarding": "^1.0.8",
    "@storybook/blocks": "^7.5.3",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/react": "^7.5.3",
    "@storybook/react-vite": "^7.5.3",
    "@storybook/testing-library": "^0.2.2",
    "@testing-library/react": "^14.1.0",
    "@types/jest": "^29.5.8",
    "@types/react": "^18.2.23",
    "css-loader": "^6.8.1",
    "husky": "^8.0.0",
    "is-ci": "^3.0.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sass-loader": "^13.3.2",
    "storybook": "^7.5.3",
    "style-loader": "^3.3.3",
    "ts-jest": "^29.1.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react-hooks": "^2.2.2",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vite-plugin-dts": "^3.6.3"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1"
  }
}
